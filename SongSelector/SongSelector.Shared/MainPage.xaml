<Page
    x:Class="SongSelector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SongSelector"
    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0"
            Margin="20" HorizontalAlignment="Center"
            FontSize="30" VerticalAlignment="Center"
            Text="Hello, World!" />

        <TextBox Grid.Row="1"
             Header="First Dance"            
             PlaceholderText="Select a Song..."
             Style="{StaticResource AndroidTextBoxStyle}"
             HorizontalAlignment="Center" VerticalAlignment="Center"    
             IsEnabled="True" />

        <Button Content="BUTTON" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"
            Style="{StaticResource AndroidButtonStyle}"
            IsEnabled="True" />
    </Grid>
</Page>
